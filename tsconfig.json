{
   "compilerOptions": {
       "outDir": "dist",
       "rootDir": "src",
       "sourceMap": true,
       "target": "ES2020",
       "module": "CommonJS",
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "noImplicitAny": true,
       "strict": true,
       "skipLibCheck": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true
   },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.ts",
  ],
}
